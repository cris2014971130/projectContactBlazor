@page "/space"
@using BlazorApp1.Shared;
@inject HttpClient Http
@inject NavigationManager Navigation
<h3>Cantidad de Contactos que Existen</h3>

<div class="alert alert-secondary mt-4">
    <span class="oi oi-person me-2" aria-hidden="true"></span>
    <span class="text-nowrap">
        <p>@message</p>
    </span>
</div>

@code {
    
    private string message;
    private int numContactos;

     protected override async Task OnInitializedAsync(){
        numContactos = await Http.GetFromJsonAsync<int>($"/api/Contact/space");
        message = "Existe(n) "+ numContactos +" Contactos en la Base de Datos";
    }
}